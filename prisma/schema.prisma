datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String          @unique
  type        String
  category    Category? @relation(fields: [category_id], references: [id])
  category_id Int?
  ingredients Ingredient[]
  sales       Sale[]
  price       Decimal
}

model Category {
  id          Int             @id @default(autoincrement())
  name String @unique
  products Product[]
}

model Ingredient {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  allergen    Boolean
  vegan       Boolean
  vegetarian  Boolean
  products    Product[]
}

model Employee {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  role      String
  duties    Duty[]
}

model Duty {
  id        Int     @id @default(autoincrement())
  task      String  @unique
  completed Boolean @default(false)
  employee  Employee[]
}

model Supplier {
  id        Int    @id @default(autoincrement())
  name      String @unique
  contact   String
  email     String
  phone_num String
  address   String
}

model Sale {
  id    Int       @id @default(autoincrement())
  date  DateTime  @default(now())
  items Product[]
}
