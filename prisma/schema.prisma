model Product {
  id          Int             @id @default(autoincrement())
  name        String          @unique
  type        String
  category    ProductCategory
  ingredients Ingredient[]
  sales       Sale[]
  price       Float
}

enum ProductCategory {
  Cake
  Drink
  Food
}

model Ingredient {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  allergen    Boolean
  vegan       Boolean
  vegetarian  Boolean
  products    Product? @relation(fields: [products_id], references: [id])
  products_id Int?
}

model Employee {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  role      String
  duties    Duty[]
}

model Duty {
  id        Int     @id @default(autoincrement())
  task      String  @unique
  completed Boolean @default(false)
  staff     Employee[]
}

model Supplier {
  id        Int    @id @default(autoincrement())
  name      String @unique
  contact   String
  email     String
  phone_num String
  address   String
}

model Sale {
  id    Int       @id @default(autoincrement())
  date  DateTime  @default(now())
  items Product[]
}
